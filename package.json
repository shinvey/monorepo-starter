{
  "name": "monorepo-starter",
  "private": true,
  "scripts": {
    "prebuild": "run-p lint test",
    "build": "lerna exec --parallel -- cross-env BABEL_ENV=build rollup -c=../../rollup.config.ts",
    "watch": "lerna exec --parallel -- rollup -w -c=../../rollup.config.ts",
    "prerelease": "yarn build",
    "release": "lerna publish",
    "storybook": "start-storybook",
    "commit": "git-cz",
    "fix": "run-p -c lint:* -- --fix",
    "lint": "run-p -c lint:*",
    "lint:ts": "eslint 'packages/**/*.+(j|t)s*(x)'",
    "lint:css": "stylelint 'packages/**/*.*(p|s|l)+(c|a|e)ss'",
    "verdaccio": "verdaccio",
    "test": "jest",
    "push:all": "git remote | xargs -L1 git push --all",
    "push:all:win": "git-bash -c 'npm run push:all'"
  },
  "workspaces": [
    "packages/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-lerna-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "lint-staged": {
    "packages/**/*.+(j|t)s*(x)": [
      "yarn lint:ts --cache --fix"
    ],
    "packages/**/*.*(p|s|l)+(c|a|e)ss": [
      "yarn lint:css --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "browserslist": [
    "Android >= 5",
    "iOS >= 8"
  ],
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@storybook/addon-info": "^5.3.18",
    "@storybook/addon-knobs": "^5.3.18",
    "@types/babel__core": "^7.1.7",
    "@types/eslint": "^6.8.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.2",
    "@types/rollup-plugin-peer-deps-external": "^2.2.0",
    "@types/rollup-plugin-postcss": "^2.0.0",
    "@types/storybook__addon-actions": "^5.2.1",
    "@types/storybook__addon-knobs": "^5.2.1",
    "@types/storybook__addon-links": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/experimental-utils": "^2.33.0",
    "@typescript-eslint/parser": "^2.29.0",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.0.4",
    "cross-env": "^7.0.2",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rollup": "^2.7.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-delete": "^1.2.0",
    "rollup-plugin-multi-input": "^1.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-no-unsupported-browser-features": "^4.0.0",
    "stylelint-prettier": "^1.1.2",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.0",
    "typescript": "^3.9.2"
  }
}
